{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DarkCircuit",
  "version": "0.1.0",
  "identifier": "com.darkcircuit.app",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://127.0.0.1:8000",
    "beforeBuildCommand": "",
    "frontendDist": "public"
  },
  "app": {
    "windows": [
      {
        "title": "DarkCircuit",
        "devtools": true,
        "width": 1920,
        "height": 1080
      }
    ],
    "security": {
      "csp": "default-src 'self' http://127.0.0.1:8000; font-src 'self' http://127.0.0.1:8000; style-src 'self' 'unsafe-inline';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["dist/backend_server"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "all": true
    }
  }
}